import java.util.Scanner;
/*
*Name:Qiurong Chen
*Description: This is MidtermProblems #1 .
*Required are to write a public static method will return a modified String replacing the first character with the one that was passed in.
*Date created: 4/17/2023
*Email: qiurong.chen@lc.cuny.edu
*/
public class MidtermProblems {
	public static String replaceFirst(String s,char c) {
		if(s == null) {
			return null;
		}
		s = s.replace(" ", "");
		if(s.equals("")) {
			return "";
		}
		char charFirst = s.charAt(0);
		String ans = s.replace(charFirst, c);
		return ans;
		
	}
	
	public static String difference(int a,int b) {
		int diff = a - b;
		if(diff > 0) {
			return "a is bigger by " + diff;
		}
		else if(diff < 0) {
			return "b is bigger by " + (-diff);
		}
		else {
			return "EQUAL";
		}
		}
	public static String odds(int a) {
		if(a == 0) {
		return "";	
		}
		else if(a < 1) {
			return "NONE";
		}
		else {
		String ans = "";
		for(int i = 1; i <= a; i +=2) {
			if(i != a && i != a-1) {
				ans += i+",";
			}
			else {
				ans += i ;
			}
		}
		return ans;
	}
	}
	public static int sumAll(int a, int b) {
		if(a == b) {
			return a+b;
		}
		int sum = 0;
		for(int i= Math.min(a, b);i<= Math.max(a, b);i++) {
			sum += i;
		}
		return sum;
	}
	}


